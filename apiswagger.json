  {SegreteriaId}/Home/Topic/searched:
    get:
      tags:
      - "Segreteria"
      summary: "Manda alla pagina di inserimento della domanda"
      operationId: "getPaginaDellaDomanda"
      produces:
      - "application/xml"
      - "application/json"
      responses:
        200:
          description: "successful operation"
