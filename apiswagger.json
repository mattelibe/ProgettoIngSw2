            $ref: "/heroku/paginadelladomanda"
        404:
          description: "Page not found"
      security:
      - api_key: []
    
    
    
 {SegreteriaId}/PaginaDiInserimento:
    post:
      tags:
      - "Segreteria"
      summary: "Manda una domanda"
      operationId: "uploadQuestion"
      consumes:
      - "multipart/form-data"
      produces:
      - "application/json"
      parameters:
      - name: "Topic"
        in: "path"
        description: "Topic of the question"
        type: "integer"
        format: "int64"
      - name: "Question"
        in: "formData"
        description: "The question"
        type: "string"
      - name: "Answer"
        in: "formData"
        description: "The answer"
        type: "string"
      responses:
        200:
          description: "successful operation"
          schema:
            $ref: "#/heroku/paginadirisposta"
      security:
      - Segreteria_auth:
        - "write:Answer"
        - "read:Question"





    in: "header"
