      password:
        type: "string"
    xml:
      name: "User"
  
  Tag:
    type: "object"
      name:
        type: "string"
    xml:
      name: "Tag"
 
  ApiResponse:
    type: "object"
    properties:
      code:
        type: "integer"
        format: "int32"
      type:
        type: "string"
      message:
        type: "string"
